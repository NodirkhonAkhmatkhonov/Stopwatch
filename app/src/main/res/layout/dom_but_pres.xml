<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/darker_gray">

    <android.support.v7.widget.CardView
        android:id="@+id/first_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/dm_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/dm_first"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/first_text"
                />

            <TextView
                android:id="@+id/first_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Where is the Pickup Location?"
                android:layout_marginLeft="20dp"
                android:textColor="@android:color/black"
                app:layout_constraintLeft_toRightOf="@id/dm_first"
                app:layout_constraintTop_toTopOf="@id/dm_first"
                app:layout_constraintBottom_toBottomOf="@id/dm_first"
                />

            <ImageView
                android:id="@+id/first_right_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_chevron_right_grey_24dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/first_line"
                />

            <View
                android:id="@+id/first_line"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginTop="10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/dm_first"
                />

            <TextView
                android:id="@+id/tv_pickup_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recent pickup locations"
                android:layout_margin="10dp"
                app:layout_constraintTop_toBottomOf="@id/first_line"
                app:layout_constraintLeft_toLeftOf="parent"
                />

            <ImageView
                android:id="@+id/im_first_pick_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/location"
                android:layout_margin="20dp"
                app:layout_constraintTop_toBottomOf="@id/tv_pickup_location"
                app:layout_constraintLeft_toLeftOf="@id/dm_first"
                app:layout_constraintRight_toRightOf="@id/dm_first"
                />

            <TextView
                android:id="@+id/first_name_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jason Bourne / +971 55 500 0101"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="10dp"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/tv_pickup_location"
                app:layout_constraintLeft_toLeftOf="parent"
                />

            <TextView
                android:id="@+id/first_tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mazaya Business Avenue, BB1, JLT,\nDubai, UAE"
                android:layout_marginLeft="70dp"
                android:textColor="@android:color/black"
                app:layout_constraintTop_toBottomOf="@id/first_name_phone"
                app:layout_constraintLeft_toLeftOf="parent"
                />

            <View
                android:id="@+id/second_line"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginTop="10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/first_tv_address"
                />

            <ImageView
                android:id="@+id/im_second_pick_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/location"
                android:layout_margin="20dp"
                app:layout_constraintTop_toBottomOf="@id/second_line"
                app:layout_constraintLeft_toLeftOf="@id/im_first_pick_up"
                app:layout_constraintRight_toRightOf="@id/im_first_pick_up"
                />

            <TextView
                android:id="@+id/second_name_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Samantha James / +971 50 250 9133"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="10dp"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/second_line"
                app:layout_constraintLeft_toLeftOf="parent"
                />

            <TextView
                android:id="@+id/second_tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mazaya Business Avenue, BB1, JLT,\nDubai, UAE"
                android:layout_marginLeft="70dp"
                android:textColor="@android:color/black"
                app:layout_constraintTop_toBottomOf="@id/second_name_phone"
                app:layout_constraintLeft_toLeftOf="parent"
                />

            <View
                android:id="@+id/third_line"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginTop="10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/second_tv_address"
                />

            <ImageView
                android:id="@+id/ic_phone_book"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/pic_address_book"
                android:layout_margin="20dp"
                app:layout_constraintTop_toBottomOf="@id/third_line"
                app:layout_constraintLeft_toLeftOf="@id/im_first_pick_up"
                app:layout_constraintRight_toRightOf="@id/im_first_pick_up"
                app:layout_constraintBottom_toBottomOf="parent"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address Book"
                android:textColor="@android:color/black"
                app:layout_constraintLeft_toLeftOf="@id/first_tv_address"
                app:layout_constraintTop_toTopOf="@id/ic_phone_book"
                app:layout_constraintBottom_toBottomOf="@id/ic_phone_book"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_chevron_right_grey_24dp"
                app:layout_constraintRight_toRightOf="@id/first_right_sign"
                app:layout_constraintTop_toTopOf="@id/third_line"
                app:layout_constraintBottom_toBottomOf="parent"
                />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/second_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/first_card"
        >

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/ic_delivery_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_delivery_location"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Where is the Delivery Location"
                android:layout_marginLeft="25dp"
                app:layout_constraintLeft_toRightOf="@id/ic_delivery_location"
                app:layout_constraintTop_toTopOf="@id/ic_delivery_location"
                app:layout_constraintBottom_toBottomOf="@id/ic_delivery_location"
                />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/third_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="5dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/second_card"
        >

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/ic_parcel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_parcel"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="What is the Parcel?"
                android:layout_marginLeft="20dp"
                app:layout_constraintLeft_toRightOf="@id/ic_parcel"
                app:layout_constraintTop_toTopOf="@id/ic_parcel"
                app:layout_constraintBottom_toBottomOf="@id/ic_parcel"
                />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/fourth_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="5dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/third_card"
        >

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/ic_trans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_trans"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="What is the Parcel?"
                android:layout_marginLeft="15dp"
                app:layout_constraintLeft_toRightOf="@id/ic_trans"
                app:layout_constraintTop_toTopOf="@id/ic_trans"
                app:layout_constraintBottom_toBottomOf="@id/ic_trans"
                />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>